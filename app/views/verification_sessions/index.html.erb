<div class="container mx-auto pt-5 text-center">
  <h2 class="mb-6">Retrieve Verification session</h2>
  <%= form_with url: "/verifications", method: :post do |form| %>
    <%= form.label :verification_session_id, "Search for:" %>
    <%= form.text_field :verification_session_id, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <%= form.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>
  <% end %>
</div>
